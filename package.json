{
  "name": "igel-ui",
  "version": "0.0.1",
  "description": "GUI app for igel",
  "keywords": ["igel", "machine learning", "artificial intelligence", "data science"],
  "author": "Nidhal Baccouri <nidhalbacc@gmail.com>",
  "license": "Apache-2.0",
  "main": "main.js",
  "copyright": "Copyright Â© 2020 ${author}",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.igel.app",
    "asar": false,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/logo.ico"
    },
    "mac": {
      "category": "your.app.category.type"
    }
  },
  "devDependencies": {
    "electron": "^10.1.3",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "python-shell": "^2.0.2"
  }
}
